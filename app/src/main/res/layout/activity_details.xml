<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/image_view_movie_image"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_movie_name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_view_movie_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_director"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_view_movie_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_year"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_director"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_actors"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_year"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_plot"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_actors"/>

</RelativeLayout>